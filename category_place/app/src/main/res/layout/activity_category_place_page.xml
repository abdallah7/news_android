<?xml version="1.0" encoding="utf-8"?>
<RelativeLayout xmlns:android="http://schemas.android.com/apk/res/android"
xmlns:tools="http://schemas.android.com/tools"
android:layout_width="match_parent"
android:layout_height="match_parent"
android:paddingBottom="@dimen/activity_vertical_margin"
android:paddingLeft="@dimen/activity_horizontal_margin"
android:paddingRight="@dimen/activity_horizontal_margin"
android:paddingTop="@dimen/activity_vertical_margin"
tools:context="com.example.abdallah.smart_city.places_category">

<ScrollView
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:id="@+id/scrollView"/>
<RelativeLayout
    android:layout_width="match_parent"
    android:layout_height="match_parent">
    <TextView
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:text="category name :"
        android:id="@+id/category_name"
        android:textColor="#060606"
        android:textSize="26dp" />


    <SearchView
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:id="@+id/search_place_in_category"
        android:layout_alignParentLeft="true"
        android:layout_alignParentStart="true"
        android:layout_marginTop="63dp"
        />

    <RelativeLayout
        android:orientation="vertical"
        android:layout_width="wrap_content"
        android:layout_height="120dp"
        android:layout_below="@+id/search_place_in_category"
        android:layout_alignParentLeft="true"
        android:layout_alignParentRight="true"
        android:layout_alignParentStart="true"
        android:layout_margin="15dp"
        android:background="#cfcece"
        android:id="@+id/place_area"
        android:padding="15dp">

        <ImageView
            android:layout_width="70dp"
            android:layout_height="80dp"
            android:id="@+id/place_imageView"
            android:layout_alignParentTop="true"
            android:layout_alignParentLeft="true"
            android:src="@drawable/place1"
            android:paddingLeft="5dp"
            android:layout_marginRight="10dp" />


        <TextView
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:text="al giza runner"
            android:id="@+id/place_name"
            android:textColor="#060606"
            android:textIsSelectable="false"
            android:textSize="25dp"
            android:layout_toRightOf="@+id/place_imageView"
            android:layout_marginBottom="5dp" />

        <TextView
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:textAppearance="?android:attr/textAppearanceLarge"
            android:text="we run along to all giza squer"
            android:id="@+id/sport_address"
            android:layout_below="@+id/place_name"
            android:textIsSelectable="true"
            android:layout_toRightOf="@+id/place_imageView" />

    </RelativeLayout>

    <TextView
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:text="top places :"
        android:id="@+id/top_places"
        android:layout_below="@+id/place_area"
        android:layout_alignLeft="@+id/place_area"
        android:layout_alignStart="@+id/place_area"
        android:textSize="26dp"
        android:textColor="#060606" />

    <RelativeLayout
        android:orientation="vertical"
        android:layout_width="wrap_content"
        android:layout_height="120dp"
        android:layout_below="@+id/top_places"
        android:layout_alignParentLeft="true"
        android:layout_alignParentRight="true"
        android:layout_alignParentStart="true"
        android:layout_margin="15dp"
        android:background="#cfcece"
        android:id="@+id/place_area1"
        android:padding="15dp">

        <ImageView
            android:layout_width="70dp"
            android:layout_height="80dp"
            android:id="@+id/place_imageView1"
            android:layout_alignParentTop="true"
            android:layout_alignParentLeft="true"
            android:src="@drawable/place1"
            android:paddingLeft="5dp"
            android:layout_marginRight="10dp" />


        <TextView
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:text="city stars"
            android:id="@+id/place_name1"
            android:textColor="#060606"
            android:textIsSelectable="false"
            android:textSize="25dp"
            android:layout_toRightOf="@+id/place_imageView1"
            android:layout_marginBottom="5dp" />

        <TextView
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:textAppearance="?android:attr/textAppearanceLarge"
            android:text="omar lbn EL-Khattab , nasr city,cairo governorate"
            android:id="@+id/place_address1"
            android:layout_below="@+id/place_name1"
            android:textIsSelectable="true"
            android:layout_toRightOf="@+id/place_imageView1" />

    </RelativeLayout>


</RelativeLayout>

</RelativeLayout>
